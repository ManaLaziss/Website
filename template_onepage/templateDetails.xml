<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 3.0//DTD template 1.0//EN"
 "http://dev.joomla.org/xml/3.0/template-install.dtd">
<extension version="3.0" type="template">
	<name>onepage</name>
	<creationDate>11-04-2014</creationDate>
	<author>Richter Anne, Schönherr Sara</author>
	<authorEmail></authorEmail>
	<authorUrl></authorUrl>
	<copyright>Richter Anne, Schönherr Sara 2014</copyright>
	<license>GNU/GPL</license>
	<version>0.0.3</version>
	<description>TPL_ONEPAGE_DESCRIPTION</description>
	
	<files>
		<folder>css</folder>
		<filename>index.php</filename>
		<filename>index.html</filename>
		<filename>templateDetails.xml</filename>
	</files>       

	<languages>
		<language tag="en-GB">en-GB.tpl_templatename.ini</language>
		<language tag="de-DE">de-DE.tpl_templatename.ini</language>
	</languages>
	
	<positions>
		<position>menu</position>
		<position>text</position>
	</positions>
	
	<config>
		<fields name="params">
			<fieldset name="advanced">
        	<field 	name="sitetitle" 
        			type="text" 
        			default="" 
        			label="TPL_ONEPAGE_FIELD_SITETITLE_LABEL" 
        			description="TPL_ONEPAGE_FIELD_SITETITLE_DESC" 
        			filter="string" />
      	  	<field 	name="sitedescription" 
       	 			type="text" default="" 
       	 			label="TPL_ONEPAGE_FIELD_SITEDESCRIPTION_LABEL" 
        			description="TPL_ONEPAGE_FIELD_SITEDESCRIPTION_DESC" 
        			filter="string" />
      		</fieldset>
		</fields>
	</config>
	
</extension>